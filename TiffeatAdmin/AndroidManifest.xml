<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tiffeatadmin"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tiffeatadmin.mobile.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tiffeatadmin.mobile.TabActivity"
            android:label="@string/title_activity_tab" >
        </activity>
        <activity
            android:name="com.tiffeatadmin.mobile.OrdersScreen"
            android:label="@string/title_activity_orders_screen" >
        </activity>
        <activity
            android:name="com.tiffeatadmin.mobile.MealsScreen"
            android:label="@string/title_activity_meals_screen" >
        </activity>
        <activity
            android:name="com.tiffeatadmin.mobile.CustomersScreen"
            android:label="@string/title_activity_customers_screen" >
        </activity>
        <activity
            android:name="com.tiffeatadmin.mobile.VendorsScreen"
            android:label="@string/title_activity_vendors_screen" >
        </activity>
        <activity
            android:name="com.tiffeatadmin.mobile.AddMealContentTab"
            android:label="@string/title_activity_add_meal_content_tab" >
        </activity>
        <activity
            android:name="com.tiffeatadmin.mobile.AddLunchScreen"
            android:label="@string/title_activity_add_lunch_screen" >
        </activity>
        <activity
            android:name="com.tiffeatadmin.mobile.AddDinnerScreen"
            android:label="@string/title_activity_add_dinner_screen" >
        </activity>
        <activity
            android:name="com.tiffeatadmin.mobile.Homepage"
            android:label="@string/title_activity_homepage" >
        </activity>
    </application>

</manifest>
